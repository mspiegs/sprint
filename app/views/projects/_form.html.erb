    <%= f.date_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :duration_number %><br>
    <%= f.number_field :duration_number %>
  </div>
  <div class="field">
    <%= f.label :duration_length %><br>
    <%= f.text_field :duration_length %>
  </div>
