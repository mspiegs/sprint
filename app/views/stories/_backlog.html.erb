
      <% if backlog.value == 8 %>
        <% initial = 'G' %>
      <% elsif backlog.value == 4 %>
        <% initial = 'P' %>
      <% elsif backlog.value == 2 %>
        <% initial = 'T' %>
      <% elsif backlog.value == 20 %>
        <% initial = 'K' %>
      <% else %>
        <% initial = '?' %>
      <% end %>
      <li class="hoveritem" data-story-id="<%= backlog.id %>"><div class="itemstyle"><span class="pointVal"><%= initial %></span><%= link_to backlog.title, story_path(backlog) %><span style="float: right; padding-right: 5px"><a data-method="get" href="/stories/<%=backlog.id%>/edit" class="glyphicon glyphicon-edit"></a></span></div>
        <div class="hoverview">
          <div class="hoverviewitem">
            
          </div>
          <div class="statusbutton">
              <%= form_for backlog, remote: true, :html => {:class => "hoverform"} do |f| %>
                <%= f.label :story_status %>
                <%= f.select :status, options_for_select([['Backlog', 'backlog'], ['Committed', 'committed'],['Started', 'started'],['QA', 'qa'],['Complete','complete'],['Accepted','accepted']], selected: backlog.status), {}, {class: 'status'} %>
                <%= f.submit "save" %>
              <% end %>
            </div>    
        </div>
      </li>
